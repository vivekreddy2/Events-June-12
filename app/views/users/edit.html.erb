<%= form_for(@user) do |f| %>
  
<fieldset>

  <div class="newuser">
    <div class="field">
    
      <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-2"></div>
        <div class="col-lg-4 col-md-4 col-xs-10 text-left"> 
          <div class="input-group input-group-lg wow fadeInUp" data-wow-delay="0.8s">
            <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-key" aria-hidden="true" ></i></span>
            <% @have = User.find(session[:user_id]) %>
            <% params[:name] = @have.name %>
            <%= f.password_field(:password, class: 'form-control', area: {describedby: 'sizing-addon1'}, placeholder: 'New Password') %>
           	<%= f.password_field(:password_confirmation, class: 'form-control', area: {describedby: 'sizing-addon1'}, placeholder: 'Confirm Password') %>
          </div>

            
            <div class="col-lg-12 col-md-12 col-xs-8 text-right">
              <div class="actions">
                <%= button_tag(class: 'btn-lg btn-success wow fadeInUp', data: {wow: {delay: 'ls'}} )do  %>
                  <i class="fa fa-key" aria-hidden="true" > Change Password</i>
                <% end %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  
</fieldset>
<% end %>